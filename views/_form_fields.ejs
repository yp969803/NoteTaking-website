<div class="form-group">
    <label for="title" class="display-6">Title: </label>
    <input required type="text" value='<%=article.title%>' placeholder="Title" id="title" name="title" class="form-control">
    <label for="description" class="display-6">Description: </label>
    <textarea required type="text" placeholder="Description" id="description" rows="8" name="description" class="form-control mb-5 ">
        <%=article.description%>
    </textarea>
    <button class="btn btn-primary" type="submit">Submit</button>
    <a href="/" class="btn btn-secondary">Cancel</a>

</div>